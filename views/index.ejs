<body class="fullbleed layout vertical">
  <template class="event-listener" is="dom-bind">
    <paper-drawer-panel>
      <div drawer>
        <paper-toolbar>
          <span class="drawer-title">Menu</span>
        </paper-toolbar>

        <paper-menu selected="0">
          <paper-item>Sample Item 1</paper-item>
          <paper-item>Sample Item 2</paper-item>
        </paper-menu>
      </div>
    </paper-drawer-panel>
  </template>
</body>
